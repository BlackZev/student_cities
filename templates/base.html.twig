{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Student Cities</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                {% if app.user and app.user.isApproved %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_test') }}">Home</a>
                    </li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_registration') }}">Créer un compte</a></li>
                {% endif %}
            </ul>

            {% if app.user and app.user.isApproved %}
                {# avatarSrc = photo perso OU image par défaut #}
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center"
                           href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="{{ asset('uploads/images/' ~ app.user.photoName) }}" alt="avatar"
                                 class="rounded-circle me-2" style="width:32px;height:32px;object-fit:cover">
                            {{ app.user.pseudo ?: app.user.email }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('profile_edit') }}">
                                    <i class="fa fa-user me-2"></i> Mon profil
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fa fa-sign-out-alt me-2"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{# Toasts pour flash‑messages #}
<div class="toast-container position-fixed top-0 start-0 p-3" style="z-index:2000;">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="toast text-bg-{% if label == 'success' %}success{% elseif label == 'relog' %}warning{% else %}info{% endif %}"
                 role="alert" data-bs-delay="{% if label == 'relog' %}4000{% else %}2500{% endif %}">
                <div class="d-flex">
                    <div class="toast-body">{{ message }}</div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.toast').forEach(t => new bootstrap.Toast(t).show());

    // déconnexion automatique après changement de mot de passe
    if (document.querySelector('.toast.text-bg-warning')) {
        setTimeout(() => { window.location.href = "{{ path('app_logout') }}"; }, 4000);
    }
});
</script>

{% block javascripts %}{% endblock %}
</body>
</html>
